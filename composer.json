{
    "name": "hmimeee/easysendsms",
    "description": "HTTP(s) SMS API Handler for Easy Send SMS - A SMS sending provider",
    "keywords": [
        "sms-api",
        "easysendsms",
        "notification",
        "sms"
    ],
    "homepage": "https://github.com/hmimeee/easysendsms",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Hossain Mohammad Imran",
            "email": "hmimeee@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Hmimeee\\Easysendsms\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hmimeee\\Easysendsms\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hmimeee\\Easysendsms\\EasysendsmsServiceProvider"
            ],
            "aliases": {
                "Easysendsms": "Hmimeee\\Easysendsms\\EasysendsmsFacade"
            }
        }
    }
}
